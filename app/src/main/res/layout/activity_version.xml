<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:gravity="center"
    android:backgroundTint="@color/white"
    android:background="@drawable/card_view_background"
    tools:context=".VersionActivity">

    <ImageView
        android:id="@+id/versionimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/versionback" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versionimg"
        android:paddingLeft="90sp"
        android:text="Version : 1.7.0"
        android:textColor="@color/purple_700"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="Created by Roopesh Krishnan Copyright (c) 2020 All rights reserved.
Last modified 2020"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:paddingLeft="45dp"
        android:paddingRight="45sp"/>

    <Button
        android:id="@+id/versionok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@drawable/bt_bg_ok"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="40sp"/>



</RelativeLayout>