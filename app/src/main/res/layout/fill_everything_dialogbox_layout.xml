<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300sp"
    android:layout_height="200sp"
    android:layout_gravity="center"
    android:background="@color/delete_dialog_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:paddingTop="15sp"
        android:paddingBottom="10sp"
        android:src="@drawable/ic_pencil" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginBottom="15sp"
        android:text="Please fill every field"
        android:textColor="@color/delete_dialog_textcolor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fill_ok_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="80sp"
        android:layout_marginRight="80sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/bt_bg_fillbutton"
        android:text="OK"
        android:textColor="@color/delete_dialog_textcolor" />


</LinearLayout>