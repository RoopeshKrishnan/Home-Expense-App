<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="4dp"
    tools:ignore="InvalidId">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/recy_card_back"
        android:weightSum="11">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7sp"
            android:layout_marginLeft="2sp"
            android:layout_weight="2"
            android:src="@mipmap/card_img_" />

        <TextView
            android:id="@+id/holder_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="6sp"
            android:gravity="center_vertical"
            android:text="here is"
            android:textColor="@color/recy_card_total_textcolor"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/holder_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4"
            android:background="@drawable/bt_bg_cancel"
            android:gravity="center"
            android:text="here is"
            android:textColor="@color/recy_card_total_textcolor"
            android:textSize="31sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.cardview.widget.CardView>